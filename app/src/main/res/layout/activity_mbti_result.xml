<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    <include layout="@layout/view_status_bar"
        android:id="@+id/status_bar" />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:text="你的测评结果"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/shape_dot"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_24"
                android:background="@drawable/shape_subject_btn_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dp_24">

                <TextView
                    android:id="@+id/tv_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp_20"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_result_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp_16" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:text="你的性格倾向用条形图显示如下，条越长倾向越明显"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_24"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_title"
                            android:text="外向(E)"
                            android:textSize="@dimen/mbti_progress_text_size"/>
                        <ProgressBar
                            android:id="@+id/progress_e"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="@dimen/dp_6"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:progressDrawable="@drawable/progress_mbti_i"
                            android:max="21" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ProgressBar
                            android:id="@+id/progress_i"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_6"
                            android:layout_weight="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:progressDrawable="@drawable/progress_mbti_e"
                            android:max="21" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_title"
                            android:textSize="@dimen/mbti_progress_text_size"
                            android:text="内向(I)"
                            android:gravity="end"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_12">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_text_title"
                            android:text="感觉(S)"
                            android:textSize="@dimen/mbti_progress_text_size"/>
                        <ProgressBar
                            android:id="@+id/progress_s"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="6dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:max="26"
                            android:progressDrawable="@drawable/progress_mbti_s"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ProgressBar
                            android:id="@+id/progress_n"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:max="26"
                            android:progressDrawable="@drawable/progress_mbti_n"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_title"
                            android:textSize="@dimen/mbti_progress_text_size"
                            android:text="直觉(N)"
                            android:gravity="end"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_12">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_text_title"
                            android:text="思考(T)"
                            android:textSize="@dimen/mbti_progress_text_size"/>
                        <ProgressBar
                            android:id="@+id/progress_t"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="6dp"
                            android:paddingStart="@dimen/dp_10"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:max="24"
                            android:progressDrawable="@drawable/progress_mbti_t"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ProgressBar
                            android:id="@+id/progress_f"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:max="24"
                            android:progressDrawable="@drawable/progress_mbti_f"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_title"
                            android:text="情感(F)"
                            android:gravity="end"
                            android:textSize="@dimen/mbti_progress_text_size"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_12">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_text_title"
                            android:text="判断(J)"
                            android:textSize="@dimen/mbti_progress_text_size"/>
                        <ProgressBar
                            android:id="@+id/progress_j"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="6dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:max="22"
                            android:progressDrawable="@drawable/progress_mbti_j"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ProgressBar
                            android:id="@+id/progress_p"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:paddingStart="@dimen/dp_10"
                            android:max="26"
                            android:progressDrawable="@drawable/progress_mbti_p"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_title"
                            android:text="知觉(P)"
                            android:textSize="@dimen/mbti_progress_text_size"
                            android:gravity="end"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

           <com.liuxe.gaokaoass.widget.MyListView
               android:id="@+id/lv_mbti_result"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:divider="@null"
               android:listSelector="@android:color/transparent"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_16"
        android:paddingRight="@dimen/dp_24"
        android:paddingTop="@dimen/dp_16">
        <TextView
            android:id="@+id/tv_zy"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_subject_btn_bg"
            android:padding="@dimen/dp_14"
            android:text="查看推荐专业"
            android:gravity="center"
            android:textColor="@color/color_white"/>
        <TextView
            android:id="@+id/tv_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/shape_question_btn_bg"
            android:padding="@dimen/dp_14"
            android:text="重新测试"
            android:gravity="center"
            android:textColor="@color/color_text_title"/>
    </LinearLayout>


</LinearLayout>